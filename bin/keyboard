#!/usr/bin/env python

import os


def get_layout():
    return os.popen("setxkbmap -query").read().split()[5].capitalize()


if __name__ == "__main__":
    try:
        print(f"Your keyboard distribution is: {get_layout()}.")
    except FileNotFoundError as no_setxkbmap:
        raise BaseException("setxkbmap command not exists!") from  no_setxkbmap
