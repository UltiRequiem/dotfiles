#!/usr/bin/env python

import subprocess


def get_layout() -> str:
    process = subprocess.run(["setxkbmap", " -query"], stdout=subprocess.PIPE)
    return process.stdout.decode("utf-8").split()[5].capitalize()


try:
    print(f"Your keyboard distribution is: {get_layout()}")
except FileNotFoundError as no_setxkbmap:
    raise BaseException("setxkbmap command not exists!") from no_setxkbmap
