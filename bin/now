#!/usr/bin/env node

/**
 * @param {Date} date
 * @returns {string} The formatted date. e.g: "It's 12:32 o'clock on Tuesday, December 31,2021. (2021/12/31)"
*/
function getFormattedDate(date = new Date()) {
  const dayName = date.toLocaleDateString("en-US", { weekday: "long" });
  const monthName = date.toLocaleDateString("en-US", { month: "long" });

  const shortFormat = date.toISOString().slice(0, 10);

  return `It's ${date.getHours()}:${date.getMinutes()} o'clock on ${dayName}, ${monthName} ${date.getDate()},${date.getFullYear()}. (${shortFormat})`;
}

console.log(getFormattedDate());
